---
title: Home
layout: hero
primary_navigation: true
weight: 1
---

- home = data.home
- cases = data.home.cases
- services_buttons = data.home.buttons

%section.section
  %h2.section__header.section__header--padding= home.services
  .section__body
    %ul.services-summary-list= partial "home/service_summary", collection: data.services.items

%h2.section__header.section__header--padding= home.cases_header
- cases.each_with_index do |business_case, business_case_index|
  %section.section{ id: business_case.type }
    .case{ class: "service-summary--#{business_case.type}" }
      %h2.case__title= business_case.title
      .case__content-wrapper
        .case__content
          - descriptions = business_case.descriptions

          - if descriptions.size == 1
            .case__description
              %p.case__description-content.case__description-content--highlight= descriptions.first.content
          - else
            - descriptions.each_with_index do |description, description_index|
              - if description_index == descriptions.size - 1
                .case__description-and-quote-wrapper
                  .case__description-and-quote-description
                    .case__description
                      %h3.case__description-title= description.title
                      %p.case__description-content= description.content
                  .case__description-and-quote-quote
                    %blockquote.quote
                      %span.quote__content= business_case.quote.content
                      %cite.quote__author= business_case.quote.author
              - else
                .case__description
                  %h3.case__description-title= description.title
                  %p.case__description-content= description.content

        .case__indicator
          %ol.indicators.indicators--vertical
            - cases.each_with_index do |business_case, business_case_indicator_index|
              %li.indicators__item{ class: (business_case_indicator_index == business_case_index ? "is-active" : "") }

      .case__call-to-actions
        = link_to services_buttons.how_we_work, "/process.html", class: "service__call-to-action-action service__call-to-action service__call-to-action--process"
        = link_to services_buttons.get_in_touch, "/contact.html", class: "service__call-to-action-action service__call-to-action"

