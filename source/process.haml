---
title: Como trabalhamos
layout: layout
primary_navigation: true
weight: 4
---

- process = data.process

.process-hero
  %h2.process-hero__title= process.hero

%section.section
  .process-intro
    %h2.process-intro__title= process.intro.title
    %p.process-intro__content= process.intro.content

%section.section
  %h2.process-intro__title= process.methodology.name
  .process-intro__content
    .methodology-steps-wrapper
      %ol.methodology-steps
        - process.methodology.steps.each_with_index do |step, i|
          %li.methodology-steps__item
            .methodology-steps__background

            - isOpenClass = i == 0 ? "is-open" : ""
            .methodology-step.js-methodology-step{ class: isOpenClass }

              - id = slugify(step.name)
              = link_to "##{id}", class: "methodology-step__link methodology-step__link--step-#{i + 1}", data: { toggle: :collapse } do
                %h3.methodology-step__name= step.name
                %span.methodology-step__caret.fa.fa-angle-down

              - collapseInClass = i == 0 ? "in" : ""
              .methodology-step__content-wrapper.collapse.js-methodology-step__content-wrapper{ id: id, class: collapseInClass }
                .methodology-step__content= step.content
                %ul.methodology-step__outputs
                  - step.outputs.each do |output|
                    %li.methodology-step__outputs-item
                      %span.methodology-step__outputs-icon-wrapper
                        %span.methodology-step__outputs-icon{ class: "methodology-step__outputs-icon--#{output.icon}" }
                        .methodology-step__outputs-content-wrapper
                          %span.methodology-step__outputs-name= output.name
                          %span.methodology-step__outputs-content= output.content

      %ol.methodology-steps.methodology-steps--desktop
        - process.methodology.steps.each_with_index do |step, i|
          - id = slugify(step.name) + "--desktop"
          %li.methodology-steps__item
            .methodology-steps__background
            .methodology-steps__item-block.methodology-steps__image.methodology-step__link{ class: "methodology-step__link--step-#{i + 1}" }
            .methodology-steps__item-block.methodology-step.js-methodology-step
              .methodology-steps__content-wrapper
                %h3.methodology-step__name= step.name
                = link_to nil, ".#{id}", class: "methodology-step__caret fa fa-angle-down", data: { toggle: :collapse }
              .methodology-step__content.collapse.js-methodology-step__content-wrapper{ class: id }= step.content
            .methodology-step__outputs-wrapper.collapse{ class: id }
              %ul.methodology-step__outputs
                - step.outputs.each do |output|
                  %li.methodology-step__outputs-item
                    %span.methodology-step__outputs-icon-wrapper
                      %span.methodology-step__outputs-icon{ class: "methodology-step__outputs-icon--#{output.icon}" }
                      .methodology-step__outputs-content-wrapper
                        %span.methodology-step__outputs-name= output.name
                        %span.methodology-step__outputs-content= output.content

      .methodology-iteration Iteração

%section.process-footer
  - quote = process.quote
  %blockquote.quote.quote--inverse
    %span.quote__content= quote.content
    %cite.quote__author= quote.author
